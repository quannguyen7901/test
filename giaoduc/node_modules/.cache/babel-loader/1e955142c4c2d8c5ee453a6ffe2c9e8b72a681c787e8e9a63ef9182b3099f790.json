lementSibling == null) {\r\n                    //Tạo thông báo\r\n                    const para = document.createElement(\"div\");\r\n                    //Gán class thông báo\r\n                    para.classList.add(\"input__text--error\");\r\n                    //Gán nội dung thông báo\r\n                    const node = document.createTextNode(\r\n                        this.label + this.$resource.VN.ErrorText.TextNull);\r\n                    para.appendChild(node);\r\n                    //Gán thông báo vào dưới input\r\n                    input.parentElement.appendChild(para);\r\n                }\r\n            }\r\n            else {\r\n                input.classList.remove(\"input--error\");\r\n                //Bỏ thông báo lỗi dưới input\r\n                if (input.nextElementSibling) {\r\n                    input.parentElement.removeChild(input.nextElementSibling);\r\n                }\r\n            }\r\n        }\r\n    },\r\n}\r\n</script>\r\n\r\n<style></style>"],"mappings":"AAWA;AACA,eAAe;EACXA,IAAI,EAAE,aAAa;EACnBC,KAAK,EAAE;IACH;IACAC,UAAU,EAAE;MACRC,IAAI,EAAEC,MAAM;MACZC,OAAO,EAAE;IACb,CAAC;IACD;IACAC,OAAO,EAAE;MACLH,IAAI,EAAEI,OAAO;MACbF,OAAO,EAAE;IACb,CAAC;IACD;IACAG,QAAQ,EAAE;MACNL,IAAI,EAAEI,OAAO;MACbF,OAAO,EAAE;IACb,CAAC;IACD;IACAI,OAAO,EAAE;MACLN,IAAI,EAAEI,OAAO;MACbF,OAAO,EAAE;IACb,CAAC;IACD;IACAK,KAAK,EAAE;MACHP,IAAI,EAAEC,MAAM;MACZC,OAAO,EAAE;IACb,CAAC;IACD;IACAM,KAAK,EAAE;MACHR,IAAI,EAAEI,OAAO;MACbF,OAAO,EAAE;IACb;EACJ,CAAC;EACDO,OAAOA,CAAA,EAAG;IACN;IACA,IAAI,CAACC,SAAS,CAACC,EAAE,CAAC,UAAU,EAAE,IAAI,CAACC,QAAQ;IAC3C;IACA,IAAI,CAACC,WAAW,EAAC;EACrB,CAAC;EACDC,OAAOA,CAAA,EAAG;IACN;IACA,IAAI,CAACC,aAAa,EAAC;EACvB,CAAC;EACDC,aAAaA,CAAA,EAAG;IACZ;IACA,IAAI,CAACN,SAAS,CAACO,GAAG,CAAC,UAAU;EACjC,CAAC;EACDC,OAAO,EAAE;IACLC,QAAQA,CAACC,EAAE,EAAEC,IAAI,EAAE;MACf,IAAIC,KAAK;MACT,OAAO,UAAU,GAAGC,IAAI,EAAE;QACtB,IAAID,KAAK,EAAE;UACPE,YAAY,CAACF,KAAK,CAAC,EAAE;QACzB;;QACA,MAAMG,OAAM,GAAI,IAAI,EAAE;QACtBH,KAAI,GAAII,UAAU,CAAC,MAAM;UACrBN,EA